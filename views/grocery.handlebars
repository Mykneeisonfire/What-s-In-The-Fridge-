        </li>
        <li class="link text-teal-500 ml-10 p-10" id="grocery-link">
          <a href="/grocery">Grocery List</a>
        </li>
        <li class="link" id="recipe-link">
          <a href="/dashboard">Cutting Board</a>
        </li>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <li class="link"><a href="#" id="logout-link">Logout</a></li>
    {{else}}
        <li class="link" id="login-link"><a href="/login">Login</a></li>
        <li class="link" id="signup-link"><a href="/signup">Sign Up!</a></li>
      </ul>
    </nav>

<header>
